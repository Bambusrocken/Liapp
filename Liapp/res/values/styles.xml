  <resources>

      <!--Base application theme.-->
      <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
          <item name="android:windowContentOverlay">@null</item>
           <item name="colorPrimary">@color/colorPrimary</item>
           <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
           <item name="android:textColorSecondary">@color/colorSecondary</item>
           <item name="colorAccent">@color/colorAccent</item>
           <item name="android:actionBarStyle">@style/MyActionBar</item>

           <item name="actionBarStyle">@style/MyActionBar</item>
      </style>

      <!--Base application theme.-->
      <style name="AppTheme_noLogo" parent="Theme.AppCompat.Light.DarkActionBar">
          <item name="android:windowContentOverlay">@null</item>
          <item name="colorPrimary">@color/colorPrimary</item>
          <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
          <item name="android:textColorSecondary">@color/colorSecondary</item>
          <item name="colorAccent">@color/colorAccent</item>
          <item name="android:actionBarStyle">@style/MyActionBar_noLogo</item>

          <item name="actionBarStyle">@style/MyActionBar_noLogo</item>
      </style>

      <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/colorPrimary</item>
        <item name="elevation">0dp</item>
        <item name="background">@color/colorPrimary</item>
        <item name="logo">@drawable/libre_sensor02</item>
        <item name="displayOptions">showHome|useLogo|showTitle</item>
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
      </style>

      <style name="MyActionBar_noLogo"
          parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
          <item name="android:background">@color/colorPrimary</item>
          <item name="elevation">0dp</item>
          <item name="background">@color/colorPrimary</item>
          <item name="displayOptions">showHome|useLogo|showTitle</item>
          <item name="titleTextStyle">@style/MyTitleTextStyle_noLogo</item>
      </style>

      <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
          <item name="android:textColor">@color/colorSecondaryDark</item>
      </style>

      <style name="MyTitleTextStyle_noLogo" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
          <item name="android:textSize">20dp</item>
          <item name="android:textColor">#ffffff</item>
      </style>

  </resources>
