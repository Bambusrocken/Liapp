<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$ViewFragment">

    <LinearLayout
        android:id="@+id/logView_ll_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/logView_tv_unit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="unit"
            android:textSize="20sp"
            android:textIsSelectable="false"
            android:shadowRadius="1"
            android:textColor="@color/colorGlucoseNow"
            android:shadowColor="@color/colorBackgroundLight"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="20dp" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/logView_sv_log"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logView_ll_main">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/logView_ll_log">


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
